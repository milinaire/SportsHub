@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div style="display:flex; align-items:center; justify-content:center; width:100%; height:100%;" >

    <div class="col-md-4">
        <h1>Login to Sports Hub</h1>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <br/>
                    <input asp-for="Input.Email" class="form-control" style="height:40px; width: 400px; border-radius:0" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <br/>
                    <input asp-for="Input.Password" class="form-control" style="height:40px; width: 400px; border-radius:0" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none" >
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <br/>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="background:red;height:40px; width: 410px; border-radius:0" >Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
