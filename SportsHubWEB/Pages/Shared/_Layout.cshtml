@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsHubWEB</title>
    <link rel="stylesheet" href="~/Identity/css/site.css" />
</head>

<body style="padding:0; margin:0;" >
    <div style="position:fixed;top:40px" >
        <a href="~/" style="color:white; padding:40px 80px; background-color:#d72130; text-decoration:none; font-size:24px;" >Sports Hub</a>
    </div>

    <div style="display: flex; flex-direction: row;width:100%" >
        <div style="height: 100vh; width:40%; overflow:hidden;" >
            <img src="https://i.pinimg.com/564x/d0/58/f1/d058f1fde9a9f909ff8feeba2f7a8d64.jpg"
            style="width:100%; height:1200px" >
        </div>
        <div style="width:60%; " >

                @RenderBody()

        </div>
    </div>

    <script src="~/Identity/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Identity/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Identity/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
